each f in files
	- var classes = ['file']
	- if (f.name.substr(0,1)=='.'||f.name.substr(-1)=='~') {classes.push('hidden')}
	- if (!f.readable) {classes.push('restricted')}
	div(class=classes,data-path=base+f.name)
		span.file-img
			img.file-img(src=imageForFile(f,true))
			if f.isLink
				img.file-img-link(src='img/fatcow/16x16/link.png',title=f.link)
			if !f.readable
				img.file-img-restricted(src='img/fatcow/16x16/lock.png')
		span.file-name(title=f.name)
			= f.name.substr(0,25)
			!= f.name.length<25?'':'&#x2026;'
		span.file-size(title=f.type=='directory'?_('dirlist-filesize-items',f.items):f.size+' B')!= f.type=='directory'?_('dirlist-filesize-items',f.items):(f.readable?f.filesizeFormatted():f.size)
		span.file-date(title=f.date.toLocaleString())!= f.dateFormatted(false)
		span.file-type!= _(f.type)